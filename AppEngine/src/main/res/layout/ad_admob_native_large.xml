<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_round_corner">

        <TextView
            android:id="@+id/ad_txt"
            android:layout_width="@dimen/margin_bottom_40"
            android:layout_height="25dp"
            android:background="#61CCFA"
            android:gravity="center"
            android:text="Ad"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/native_large_height"
            android:layout_below="@+id/ad_txt"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/rl_media_container"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/appinstall_app_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/margin_left_10"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding5dp"
                        android:layout_marginRight="@dimen/padding5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appinstall_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding2dp"
                            android:layout_marginRight="@dimen/padding2dp"
                            android:ellipsize="end"
                            android:gravity="start|top"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/native_large_text_color"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/appinstall_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding2dp"
                            android:layout_marginRight="@dimen/padding2dp"
                            android:ellipsize="end"
                            android:maxLength="90"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/native_large_text_color"
                            android:textSize="12sp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/padding2dp"
                            android:layout_marginEnd="@dimen/margin_left_30"
                            android:gravity="center">


                            <RatingBar
                                android:id="@+id/appinstall_stars"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/margin10dp"
                                android:gravity="center"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin10dp"
                                android:layout_toRightOf="@+id/appinstall_stars"
                                android:text="Google Play"
                                android:textColor="#A8A7A7"
                                android:textSize="11dp" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/appinstall_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:textColor="@color/native_large_text_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/appinstall_store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:text=""
                            android:textColor="@color/native_large_sub_text_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_media_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/appinstall_call_to_action"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_left_10">


                    <ImageView
                        android:id="@+id/appinstall_image"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal" />

                    <com.google.android.gms.ads.nativead.MediaView
                        android:id="@+id/appinstall_media"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/appinstall_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/native_large_button_color"
                    android:gravity="center"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/native_large_button_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</com.google.android.gms.ads.nativead.NativeAdView>