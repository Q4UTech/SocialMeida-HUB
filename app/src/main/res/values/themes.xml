<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialMediaHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/action_bar_close</item>
        <item name="android:titleTextStyle">@style/Stl.TitleTextStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="actionBarTabTextStyle" tools:targetApi="l">@style/Stl.TitleTextStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/mulish_normal</item>
    </style>

    <style name="Stl.TitleTextStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionMenuTextColor">@color/action_bar_text</item>

    </style>

    <style name="MyCustomTextAppearance" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="textAllCaps">true</item>
    </style>

    <style name="My.New.TabText.Style" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="windowActionBar">false</item>
        <item name="backgroundColor">@color/top_bg</item>
        <item name="background">@color/top_bg</item>

<!--        <item name="android:windowActionModeOverlay">true</item>-->
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- <style name="AppTheme.SeekBar">
         <item name="colorAccent">@color/appbar_bg_color</item>
         <item name="colorPrimaryDark">@color/appbar_bg_color</item>
         <item name="colorPrimary">@color/appbar_bg_color</item>
     </style>-->
    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#FF0000</item>
        <item name="android:progressTint">#FFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:colorControlActivated">#FFF</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="actionBarTheme">@style/Widget.App.ActionMode</item>-->
        <item name="android:actionModeCloseDrawable">@drawable/action_bar_close</item>
<!--        <item name="android:actionMenuTextColor">@color/actionbar_color</item>-->
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="android:titleTextStyle">@style/Stl.TitleTextStyle</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <!--  <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
          <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>-->
        <!--        <item name="background">@color/actionbar_color</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionModeCloseDrawable">@drawable/action_bar_close</item>
    </style>
