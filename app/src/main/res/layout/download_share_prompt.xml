<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin80dp"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/rl_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_download"
                android:layout_width="@dimen/margin_left_20"
                android:layout_height="@dimen/margin_left_20"
                android:background="@drawable/ic_download"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_left_20"
                android:layout_marginBottom="@dimen/margin_left_20"
                android:background="@color/black_gray"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/tv_share"
                android:layout_width="@dimen/margin_left_20"
                android:layout_height="@dimen/margin_left_20"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_share"
                android:visibility="visible"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_left_20"
                android:layout_marginBottom="@dimen/margin_left_20"
                android:background="@color/black_gray"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_set_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_set_status_video"
                android:layout_width="@dimen/margin_left_20"
                android:layout_height="@dimen/margin_left_20"
                android:src="@drawable/ic_status" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>