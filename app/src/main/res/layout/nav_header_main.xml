<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nav_header_width"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/nav_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10sdp"
            android:rotation="180"
            android:src="@drawable/ic_cast_cross" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/app_logo"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/app_icon1" />

        <ImageView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@+id/app_logo"
            android:id="@+id/app_logo_bottom"
            android:layout_width="85dp"
            android:layout_height="17dp"
            android:background="@drawable/ic_top_logo" />

    </RelativeLayout>





</RelativeLayout>
