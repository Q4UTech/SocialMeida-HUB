<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialMediaHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/mulish_normal</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionModeCloseDrawable">@drawable/action_bar_close</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="backgroundColor">@color/top_bg</item>
        <item name="background">@color/top_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
</resources>