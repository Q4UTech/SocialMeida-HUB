<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialMediaHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/white_inapp</item>

        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/action_bar_close</item>
        <item name="android:titleTextStyle">@style/Stl.TitleTextStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="actionBarTabTextStyle" tools:targetApi="l">@style/Stl.TitleTextStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/mulish_normal</item>
        <!-- Status bar color. -->
        <item name="actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:actionMenuTextColor">@color/action_bar_text</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="backgroundColor">@color/top_bg</item>
        <item name="background">@color/top_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
</resources>